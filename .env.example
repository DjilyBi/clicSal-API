# ========================================
# REDIS (Optionnel - Pour caching)
# ========================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# ========================================
# APP CONFIGURATION
# ========================================
NODE_ENV="development"
# Options: development | production | test

PORT="3000"

# Timezone (Afrique/Dakar)
TZ="Africa/Dakar"

# Currency (Franc CFA)
CURRENCY="XOF"

# ========================================
# QR CODE CONFIGURATION
# ========================================
QR_REFRESH_INTERVAL_HOURS="1"
# Refresh des QR codes toutes les X heures

QR_CODE_LENGTH="32"
# Longueur du hash QR code

MAGIC_LINK_EXPIRY_MINUTES="10"
# Expiration des Magic Links

# ========================================
# RATE LIMITING (Sécurité)
# ========================================
RATE_LIMIT_TTL="60"
# Temps en secondes

RATE_LIMIT_MAX="100"
# Nombre max de requêtes par TTL

# ========================================
# CORS (Frontend autorisés)
# ========================================
CORS_ORIGINS="https://clicsal.app,https://admin.clicsal.app"
# Dev: "http://localhost:3000,http://localhost:3001"

# ========================================
# LOGGING
# ========================================
LOG_LEVEL="debug"
# Options: error | warn | info | debug

# ========================================
# MONITORING (Optionnel - Sentry)
# ========================================
SENTRY_DSN=""
# Si vide, monitoring désactivé
